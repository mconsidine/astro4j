{
  "extends": [
    "config:recommended"
  ],
  "addLabels": [
    "type: dependency-upgrade"
  ],
  "schedule": [
    "after 9pm"
  ],
  "repositories": ["melix/astro4j"],
  "prHourlyLimit": 1,
  "prConcurrentLimit": 20,
  "timezone": "Europe/Prague",
  "packageRules": [
    {
      "matchPackagePatterns": [
        "actions.*"
      ],
      "dependencyDashboardApproval": true
    }
  ]
}
