<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.GridPane?>
<GridPane
        fx:controller="me.champeau.a4j.jsolex.app.ConfigurationController"
        xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Label text="Generate debug images"
           GridPane.columnIndex="0" GridPane.rowIndex="0">
        <tooltip>
            <Tooltip text="Generates intermediate images like distortion corrected image files, for debugging purposes"/>
        </tooltip>
    </Label>
    <CheckBox fx:id="generateDebugImages"
              GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    <Label text="Spectrum detection threshold"
           GridPane.columnIndex="0" GridPane.rowIndex="1">
        <tooltip>
            <Tooltip text="The spectrum detection threshold (between 0 and 1)"/>
        </tooltip>
    </Label>
    <Slider fx:id="spectrumDetectionThreshold"
            min="0" max="1" blockIncrement="0.05"
            minorTickCount="10"
            showTickLabels="true"
            GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Label fx:id="spectrumDetectionLabel"
           GridPane.columnIndex="2" GridPane.rowIndex="1"/>
    <Label text="Experimental Vector API"
           GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <Label fx:id="vectorApi" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <Button text="Reset to defaults" onAction="#reset"
            GridPane.columnIndex="0" GridPane.rowIndex="4"
            GridPane.columnSpan="3" alignment="center"
    />
</GridPane>
